<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chip 8"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Content="Load" Command="{Binding Load}" Grid.Row="1" Focusable="False"/>
        <Image Source="{Binding BitmapSource}" Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor" Width="640" Height="320"/>
    </DockPanel>
</Window>
